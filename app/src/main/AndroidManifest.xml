<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.musicalstructure">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".All_Songs"
            android:label="All Songs"
            android:launchMode="singleTask" />
        <activity
            android:name=".RecentlyPlayed"
            android:label="Recently Played"
            android:launchMode="singleTask" />
        <activity
            android:name=".Playlist"
            android:label="My Playlist"
            android:launchMode="singleTask"/>
        <activity
            android:name=".Artist"
            android:label="Artists"
            android:launchMode="singleTask" />
        <activity
            android:name=".NowPlaying"
            android:label="Now Playing"
            android:launchMode="singleTask" />
        <activity
            android:name=".PurchaseSongs"
            android:label="Purchase Songs"
            android:launchMode="singleTask"/>
    </application>

</manifest>